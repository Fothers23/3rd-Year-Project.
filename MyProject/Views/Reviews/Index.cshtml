                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatePosted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GraphicQuality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Playability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoryCharacterDevelopment)
            </td>
