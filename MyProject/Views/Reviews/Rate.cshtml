@model MyProject.Models.Review

@{
    ViewData["Title"] = "Rate";
}

<h2>Rate My Review</h2>
<h4>Rate the review below based on its quality.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Rate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />
            <input type="hidden" asp-for="GraphicQuality" />
            <input type="hidden" asp-for="Playability" />
            <input type="hidden" asp-for="StoryCharacterDevelopment" />
            <input type="hidden" asp-for="GameplayControls" />
            <input type="hidden" asp-for="Multiplayer" />
            <input type="hidden" asp-for="Pros" />
            <input type="hidden" asp-for="Cons" />
            <input type="hidden" asp-for="WrittenReview" />
            <input type="hidden" asp-for="Summary" />
            <input type="hidden" asp-for="DatePosted" />
            <input type="hidden" asp-for="Game.GameID" />
            <div class="form-group">
                <label asp-for="ReviewRating" class="control-label"></label>
                <span class="text-primary">
                    <i class="ratingStar far fa-star" data-value="1"></i>
                    <i class="ratingStar far fa-star" data-value="2"></i>
                    <i class="ratingStar far fa-star" data-value="3"></i>
                    <i class="ratingStar far fa-star" data-value="4"></i>
                    <i class="ratingStar far fa-star" data-value="5"></i>
                </span>
                <input type="hidden" name="ReviewRating" id="ratingsValue" />
            </div>
            <div class="form-group">
                <input type="submit" value="Rate" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.ReviewID">Back to Review</a> |
    <a asp-controller="Games" asp-action="Index">Back to List</a>
</div>

