@model MyProject.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />
            <input type="hidden" asp-for="ReviewRating" />
            <input type="hidden" asp-for="DatePosted" />
            <input type="hidden" asp-for="Game" />
            <div class="form-group">
                <label asp-for="GraphicQuality" class="control-label"></label>
                <span class="text-primary">
                    <i class="ratingStar far fa-star" data-value="1"></i>
                    <i class="ratingStar far fa-star" data-value="2"></i>
                    <i class="ratingStar far fa-star" data-value="3"></i>
                    <i class="ratingStar far fa-star" data-value="4"></i>
                    <i class="ratingStar far fa-star" data-value="5"></i>
                </span>
                <input type="hidden" name="GraphicQuality" id="ratingsValue" />
            </div>
            <div class="form-group">
                <label asp-for="Playability" class="control-label"></label>
                <span class="text-primary">
                    <i class="ratingStar2 far fa-star" data-value="1"></i>
                    <i class="ratingStar2 far fa-star" data-value="2"></i>
                    <i class="ratingStar2 far fa-star" data-value="3"></i>
                    <i class="ratingStar2 far fa-star" data-value="4"></i>
                    <i class="ratingStar2 far fa-star" data-value="5"></i>
                </span>
                <input type="hidden" name="Playability" id="ratingsValue2" />
            </div>
            <div class="form-group">
                <label asp-for="StoryCharacterDevelopment" class="control-label"></label>
                <span class="text-primary">
                    <i class="ratingStar3 far fa-star" data-value="1"></i>
                    <i class="ratingStar3 far fa-star" data-value="2"></i>
                    <i class="ratingStar3 far fa-star" data-value="3"></i>
                    <i class="ratingStar3 far fa-star" data-value="4"></i>
                    <i class="ratingStar3 far fa-star" data-value="5"></i>
                </span>
                <input type="hidden" name="StoryCharacterDevelopment" id="ratingsValue3" />
            </div>
            <div class="form-group">
                <label asp-for="GameplayControls" class="control-label"></label>
                <span class="text-primary">
                    <i class="ratingStar4 far fa-star" data-value="1"></i>
                    <i class="ratingStar4 far fa-star" data-value="2"></i>
                    <i class="ratingStar4 far fa-star" data-value="3"></i>
                    <i class="ratingStar4 far fa-star" data-value="4"></i>
                    <i class="ratingStar4 far fa-star" data-value="5"></i>
                </span>
                <input type="hidden" name="GameplayControls" id="ratingsValue4" />
            </div>
            <div class="form-group">
                <label asp-for="Multiplayer" class="control-label"></label>
                <span class="text-primary">
                    <i class="ratingStar5 far fa-star" data-value="1"></i>
                    <i class="ratingStar5 far fa-star" data-value="2"></i>
                    <i class="ratingStar5 far fa-star" data-value="3"></i>
                    <i class="ratingStar5 far fa-star" data-value="4"></i>
                    <i class="ratingStar5 far fa-star" data-value="5"></i>
                </span>
                <input type="hidden" name="Multiplayer" id="ratingsValue5" />
            </div>
            <div class="form-group">
                <label asp-for="Pros" class="control-label"></label>
                <input asp-for="Pros" class="form-control" />
                <span asp-validation-for="Pros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cons" class="control-label"></label>
                <input asp-for="Cons" class="form-control" />
                <span asp-validation-for="Cons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WrittenReview" class="control-label"></label>
                <textarea asp-for="WrittenReview" class="form-control"></textarea>
                <span asp-validation-for="WrittenReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary" class="control-label"></label>
                <textarea asp-for="Summary" class="form-control"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Games" asp-action="Index">Back to List</a>
</div>

