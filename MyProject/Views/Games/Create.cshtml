@model MyProject.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
            <input asp-for="Picture" type="file" name="file" />
            <br />
            <input type="submit" value="Upload Image" class="btn btn-default" />
        </form>
        <br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Picture"></label>
                <input asp-for="Picture" placeholder="Enter image filename here..." value="@ViewData["Image"]" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" placeholder="Enter game title here..." class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" placeholder="Enter game description here..." class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameLink" class="control-label"></label>
                <input asp-for="GameLink" placeholder="Enter a URL to your game here..." class="form-control" />
                <span asp-validation-for="GameLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeRating" class="control-label"></label>
                <input asp-for="AgeRating" placeholder="Enter game age rating here..." class="form-control" />
                <span asp-validation-for="AgeRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" placeholder="Enter game genre here..." class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPlayers" class="control-label"></label>
                <input asp-for="NumberOfPlayers" placeholder="Enter number of game players here..." class="form-control" />
                <span asp-validation-for="NumberOfPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailablePlatforms" class="control-label"></label>
                <input asp-for="AvailablePlatforms" placeholder="Enter available game platforms here..." class="form-control" />
                <span asp-validation-for="AvailablePlatforms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewQuantity" class="control-label"></label>
                <input asp-for="ReviewQuantity" placeholder="Enter quantity of reviews required here..." class="form-control" />
                <span asp-validation-for="ReviewQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewReward" class="control-label"></label>
                <input asp-for="ReviewReward" placeholder="Enter reward for reviewers here..." class="form-control" />
                <span asp-validation-for="ReviewReward" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

