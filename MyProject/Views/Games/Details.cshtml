@model MyProject.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<h1>@Html.DisplayFor(model => model.Title)</h1>
<hr />
<div class="container">
    <div class="col-md-5">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Developer)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Developer.Name)
            </dd>
            @if (Model.Description != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
            }
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
            @if (Model.GameLink != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.GameLink)
                </dt>
            }
            <dd>
                @Html.DisplayFor(model => model.GameLink)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AgeRating)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AgeRating)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NumberOfPlayers)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumberOfPlayers)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AvailablePlatforms)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AvailablePlatforms)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ReviewReward)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ReviewReward)
            </dd>
            @if (User.IsInRole("Requester"))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.ReviewQuantity)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ReviewQuantity)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Budget)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Budget)
                </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.DatePosted)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DatePosted)
            </dd>
        </dl>
    </div>
    <div class="col-md-5 col-md-offset-1">
        <section>
            <img src="~/images/@Model.Picture" alt="Logo" class="img-responsive" />
        </section>
    </div>
</div>
    @if (User.IsInRole("Requester"))
    {
        <div>
            <a asp-controller="Reviews" asp-action="Index" asp-route-id="@Model.GameID">Reviews</a>
        </div>
        <br />
        <div>
            <a asp-action="Edit" asp-route-id="@Model.GameID">Edit</a> |
            <a asp-action="Delete" asp-route-id="@Model.GameID">Delete</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    }
    else
    {
        <p>
            <a asp-controller="Reviews" asp-action="Create" asp-route-gameId="@Model.GameID">Review</a> | 
            <a asp-action="Index">Back to List</a>
        </p>
    }



