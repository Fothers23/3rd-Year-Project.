@{
    ViewData["Title"] = "Index";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Logo.jpg" alt="Logo" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <a class="btn btn-default" href="/Identity/Account/Login">
                    Login
                </a>
            </div>
        </div>
        <div class="item">
            <img src="~/images/register.jpg" alt="RegisterDeveloper" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" href="/Identity/Account/Register">
                        Register
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/reviewer.jpg" alt="RegisterReviewer" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-default" href="/Identity/Account/Register">
                        Register
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


